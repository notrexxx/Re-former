
<h1>Create new user</h1>
<%= form_with model: @user do |form| %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Enter your username", class:"placeholder" %>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "Enter your email address", class:"placeholder" %>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Enter your password", class:"placeholder" %>
    <%= form.submit 'Submit' %>
<% end %>
